{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "applications": {
        "gecko": {
            "id": "recently-extension@arndissler.com",
            "strict_min_version": "78.0",
            "strict_max_version": "98.0"
        }
    },
    "author": "Arnd Issler",
    "homepage_url": "https://mailmindr.net/",
    "version": "1.2.2",
    "icons": {
        "16": "icons/recently-icon.svg",
        "32": "icons/recently-icon.svg"
    },
    "permissions": [
        "accountsRead",
        "menus",
        "messagesRead",
        "storage",
        "unlimitedStorage"
    ],
    "browser_action": {
        "browser_style": true,
        "default_title": "__MSG_browserActionButton__",
        "default_popup": "popup/index.html",
        "theme_icons": [
            {
                "dark": "icons/recently-icon--dark.svg",
                "light": "icons/recently-icon--light.svg",
                "size": 16
            },
            {
                "dark": "icons/recently-icon--dark.svg",
                "light": "icons/recently-icon--light.svg",
                "size": 32
            }
        ]
    },
    "background": {
        "page": "scripts/background.html",
        "persistent": true
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": true,
        "browser_style": true
    },
    "commands": {
        "open_list": {
            "suggested_key": {
                "windows": "Alt+Shift+R",
                "mac": "Command+Shift+R",
                "chromeos": "Ctrl+Shift+R",
                "linux": "Ctrl+Shift+R"
            }
        }
    }
}
